<h1 align="center">Login</h1>

<%= form_for(:session, :html => {:class => "form-horizontal", :role => "form"}, url: login_path) do |f| %>

    <div class="form-group">
        <div class="col-sm-2">
            <%= f.label :email, "Enter Email" %>
        </div>
        <div class="col-sm-8">
            <%= f.email_field :email, :class => "form-control" , :placeholder => "Email" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2">
            <%= f.label :password, "Enter Password" %>
        </div>
        <div class="col-sm-8">
            <%= f.password_field :password, :class => "form-control" , :placeholder => "Password", autocomplete: "off" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit("Log in", :class => "btn btn-primary btn-lg") %>
        </div>
    </div>
<% end %>

<div class="col-xs-4 col-xs-offset-5">
   [ <%= link_to  "cancel and back to article", articles_path %> ]
</div>
