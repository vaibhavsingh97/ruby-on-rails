<%= render  "shared/errors", obj: @user %>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@user, :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
        <div class="form-group">
            <div class="col-sm-2">
                <%= f.label :username, "Enter Username" %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :username, :class => "form-control" , :placeholder => "Username", :autofocus => true %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <%= f.label :email, "Enter Email" %>
            </div>
            <div class="col-sm-8">
                <%= f.email_field :email, :class => "form-control" , :placeholder => "Email" %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <%= f.label :password, "Enter Password" %>
            </div>
            <div class="col-sm-8">
                <%= f.password_field :password, :class => "form-control" , :placeholder => "Password" %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit(@user.new_record? ? "Sign up": "Update Account", :class => "btn btn-primary btn-lg") %>
            </div>
        </div>
        <% end %>

        <div class="col-xs-4 col-xs-offset-5">
           [ <%= link_to  "cancel and back to article", articles_path %> ]
        </div>
    </div>
</div>
